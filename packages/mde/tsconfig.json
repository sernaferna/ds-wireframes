{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "outDir": "lib/esm",
    "jsx": "react",
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
