{
  "name": "@devouringscripture/mde",
  "version": "1.1.0",
  "description": "Markdown Editor component for the Devouring Scripture app",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "/lib"
  ],
  "keywords": [
    "react",
    "bootstrap",
    "react-bootstrap",
    "markdown"
  ],
  "author": "sernaferna",
  "license": "ISC",
  "scripts": {
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "build": "npm run build:esm & npm run build:cjs",
    "test": "jest --watchAll --no-cache"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest",
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ]
  },
  "dependencies": {
    "@devouringscripture/common": "*",
    "js-file-download": "^0.4.12",
    "marked": "^4.0.18",
    "react-bootstrap-icons": "^1.8.2",
    "react-hotkeys": "^2.0.0"
  },
  "devDependencies": {
    "typescript": "^4.7.4",
    "@types/marked": "^4.0.5",
    "@types/node": "^17.0.5",
    "react-scripts": "^5.0.1",
    "bootstrap": "^5.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "@types/react-dom": "^17.0.11",
    "@types/react": "^17.0.38",
    "react-bootstrap": "^2.4.0"
  },
  "peerDependencies": {
    "bootstrap": ">=5.1.3",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2",
    "@types/react-dom": "17.0.11",
    "@types/react": ">=17.0.38",
    "react-bootstrap": ">=2.4.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}
